<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout android:id="@+id/Relative"
        android:layout_width="fill_parent"
	    android:layout_height="65dp"
	    android:layout_marginBottom="2dp">
	    <!--  
	    <ImageView android:id="@+id/ImgBG"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:background="@drawable/rightbg"/>
	    -->
    <RelativeLayout
        android:id="@+id/firstline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="xx"
            android:textColor="#ffffffff"
            android:textSize="22sp" />

       
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        
<!--  
        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="xx"
            android:textSize="20sp" />
-->

        <ImageView
            android:id="@+id/imgLevel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/wifi0"
            />
        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/thirline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/secline"
        android:layout_marginTop="50dp">
        

        <TextView
            android:id="@+id/bssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="xx"
            android:textSize="20sp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fourline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstline">
        
        <TextView
            android:id="@+id/entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp" />
    </RelativeLayout>
    
    </RelativeLayout>

</LinearLayout>